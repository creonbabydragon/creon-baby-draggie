{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [ "airbnb" ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "brace-style": ["error", "stroustrup"],
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true,
      "mode": "minimum"
    }],
    "func-names": ["warn", "never"],
    "new-cap": ["error", {
      "capIsNew": false,
      "newIsCap": true
    }],
    "no-multi-spaces": ["error", {
      "exceptions": {
        "ImportDeclaration": true,
        "Property": true,
        "VariableDeclarator": true
      },
      "ignoreEOLComments": true
    }],
    "no-param-reassign": ["error", {
      "props": true,
      "ignorePropertyModificationsFor": ["acc", "accumulator", "object", "result"]
    }],
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "semi": ["error", "never"],
    "quote-props": ["error", "as-needed"],
    "quotes": ["error", "single", {
      "avoidEscape": false,
      "allowTemplateLiterals": false
    }],
    "import/no-extraneous-dependencies": "off"
  }
}